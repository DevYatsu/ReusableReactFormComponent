{
  "type": "commonjs",
  "name": "reusable-react-form",
  "version": "1.0.0",
  "description": "A simple package containing a reusable react form. It's divided into the main form component and a component version adapted to next js.",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./@types/index.d.ts",
  "scripts": {
    "build": "pnpm build:esm && pnpm build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "lint": "eslint \"{**/*,*}.{js,ts,jsx,tsx}\"",
    "test": "jest --config jestconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint"
  },
  "git repository": "https://github.com/DevYatsu/ReusableReactFormComponent",
  "keywords": [
    "form",
    "react",
    "reactjs",
    "react-js",
    "react-form",
    "react-component",
    "react-form-component",
    "reusable-react-form",
    "reusable-react-form-component",
    "react-hook-form",
    "tailwind",
    "tailwind-css",
    "nextjs",
    "next-js",
    "typescript"
  ],
  "author": "DevYatsu",
  "license": "ISC",
  "dependencies": {
    "next": "^13.4.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.45.0",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.2",
    "@types/react": "^18.2.14",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "eslint": "^8.43.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.5.0",
    "jest-canvas-mock": "^2.5.1",
    "jest-environment-jsdom": "^29.5.0",
    "ts-jest": "^29.1.0",
    "tslib": "^2.5.3",
    "typescript": "^5.1.3"
  },
  "peerDependencies": {
    "react": ">=16"
  }
}
